--UPDATE dans la table cinema pour y inclure un id_aire_geographique

UPDATE cinema c
SET id_aire_geographique = ag.id_aire_geographique
FROM aire_geographique ag
WHERE c.commune = ag.commune ;


--UPDATE pour la table séance, permettant de rajouter les clés secondaires id_film et id_cinéma

UPDATE seance1 a
SET id_film = n.id_film 
FROM film1 n
WHERE a.titre ilike n.titre  ;

UPDATE seance1 a
SET id_film = z.id_film 
FROM film z
WHERE a.titre ilike z.titre  ;

--update pour la clé id_cinema - fonctione !!
UPDATE seance1 a
SET id_cinema = g.id_cinema 
FROM cinema g
WHERE a.nom_cinema = g.nom_cinema  ;

--UPDATE pour la table fréquentation, permettant de rajouter une clé secondaire id_cinéma

--update pour les ids
UPDATE frequentation L
SET id_cinema = g.id_cinema 
FROM cinema g
WHERE L.adresse_cinema = g.adresse  ;

--update pour les ids
UPDATE frequentation L
SET id_cinema = g.id_cinema 
FROM cinema g
WHERE L.nom_cinema = g.nom_cinema  ;
