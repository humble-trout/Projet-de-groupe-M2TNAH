REQUETE POUR LES FILMS DES ANNÉES 80 : 

SELECT ?film ?filmLabel ?realisateurLabel ?duree ?genreLabel ?dateLabel ?note
WHERE {
  ?film wdt:P31 wd:Q11424;        # Instance de film
        wdt:P57 ?realisateur;     # Réalisateur
        wdt:P577 ?date.           # Date de publication


  FILTER (
    ?date >= "1981-01-01T00:00:00Z"^^xsd:dateTime &&
    ?date <= "1990-12-31T23:59:59Z"^^xsd:dateTime
  )

  OPTIONAL { ?film wdt:P2047 ?duree. }  # Durée


  OPTIONAL {
    SELECT ?film (SAMPLE(?genre) AS ?genre)
    WHERE {
      ?film wdt:P136 ?genre.
    }
    GROUP BY ?film
  }


  OPTIONAL {
    SELECT ?film (SAMPLE(?note) AS ?note)
    WHERE {
      ?film wdt:P444 ?note.
    }
    GROUP BY ?film
  }

  SERVICE wikibase:label { bd:serviceParam wikibase:language "fr". }
}

